@using BootcampTrainee.Models
@model BoardComment

<head>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Hide variables not needed for writing comments-->
        @Html.HiddenFor(Model => Model.BoardCommentIDPK)
        @Html.HiddenFor(Model => Model.BoardIDFK)
        @Html.HiddenFor(Model => Model.UserIDFK)
        @Html.HiddenFor(Model => Model.UserName)
        @Html.HiddenFor(Model => Model.UserRoleName)
        @Html.HiddenFor(Model => Model.DateCreated)
        @Html.HiddenFor(Model => Model.DateModified)

        <!-- Header and close button -->
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                X
            </button>
            <h4 class="modal-title">Comment</h4>
        </div>
        <hr />

        <!-- textarea for comment -->
        <div class="form-group" style="margin-left:60px">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @id = "comment-update-content", @type = "text-area", @class = "form-control col-sm-offset-4", @rows = "10" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />

        <!-- Button to update-->
        <div class="form-group">
            <div class="col-md-offset-5 col-md-2">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <script>
        // replace textarea with editor
        CKEDITOR.replace('comment-update-content', { toolbarStartupExpanded: false });
    </script>
}

